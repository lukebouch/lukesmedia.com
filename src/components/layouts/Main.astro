---
import Navigation from '../Navigation.astro';
import Footer from '../Footer.astro';
import '../../main.css';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Exceptional websites designed from the ground up to grow your business."
    />
    <title>{title}</title>

    <script
      src="https://tinylytics.app/embed/MUnCsj5bqV8x_VWefwkH.js"
      defer></script>
  </head>

  <body class="text-gray-900 font-sans antialiased">
    <header>
      <Navigation />
    </header>
    <slot />
    <Footer />
  </body>
</html>
